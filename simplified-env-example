# Essential Environment Variables for SmartTasker

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
# For Docker setup:
MONGO_URI=mongodb://admin:password@localhost:27017/smarttasker?authSource=admin
# For local MongoDB:
# MONGO_URI=mongodb://localhost:27017/smarttasker
# For MongoDB Atlas:
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/smarttasker?retryWrites=true&w=majority

# Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_jwt_secret_key_change_me
JWT_EXPIRE=1d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_me
JWT_REFRESH_EXPIRE=7d
COOKIE_SECRET=your_cookie_secret_key_change_me

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# Redis Cache (Optional but recommended)
ENABLE_REDIS=true
REDIS_URL=redis://localhost:6379

# File Uploads
UPLOADS_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB

# API Documentation
ENABLE_DOCS=true

# Optional: Email Settings (only needed if you want email functionality)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your_email_user
# EMAIL_PASSWORD=your_email_password
# EMAIL_FROM=noreply@smarttasker.com
# EMAIL_DISABLED=true  # Set to false to enable emails

# Optional: Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX=100  # 100 requests per window

# Optional: Groq AI Integration (only if you're using AI features)
# GROQ_API_KEY=your_api_key
# GROQ_MODEL=llama3-8b-8192 